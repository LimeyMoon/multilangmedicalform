    <footer>
      <p>নোট: এই সার্ভে কেবল স্ক্রিনিং উদ্দেশ্যে — নির্ণয়ের প্রতিস্থাপন নয়। যদি উচ্চ স্কোর বা আত্মহত্যার চিন্তা থাকে, দ্রুত মানসিক স্বাস্থ্যের পেশাদারের সাথে যোগাযোগ করুন বা স্থানীয় জরুরি সেবা ব্যবহার করুন।</p>
    </footer>
  </div>

  <script>
    function calculateScore(){
      const totalSpan = document.getElementById('total');
      let total = 0;
      let unanswered = [];
      for(let i=1;i<=21;i++){
        const radios = document.getElementsByName('q'+i);
        let found = false;
        for(const r of radios){
          if(r.checked){
            found = true;
            total += parseInt(r.value,10);
            break;
          }
        }
        if(!found) unanswered.push(i);
      }

      // show result even if some unanswered, but warn
      document.getElementById('total').textContent = total;
      const resultBox = document.getElementById('result');
      document.getElementById('scoreVal').textContent = total;

      // Interpretation
      let interp = '';
      if(total <= 13) interp = 'বিষণ্নতা নেই বা নামমাত্র (0–13)';
      else if(total <= 19) interp = 'হালকা বিষণ্নতা (14–19)';
      else if(total <= 28) interp = 'মাঝারি মাত্রার বিষণ্নতা (20–28)';
      else interp = 'তীব্র বিষণ্নতা (29–63)';
      document.getElementById('interpretText').textContent = interp;
      resultBox.style.display = 'block';

      if(unanswered.length>0){
        // gentle note: do not block scoring
        const msg = 'নোট: কিছুম প্রশ্নে উত্তর দেওয়া হয়নি (প্রশ্ন নম্বর: ' + unanswered.join(', ') + '). মোট স্কোর অংশীয় হতে পারে।';
        alert(msg);
      }
    }

    function resetForm(){
      document.getElementById('bdiForm').reset();
      document.getElementById('total').textContent = '—';
      document.getElementById('result').style.display = 'none';
    }
  </script>
</body>
</html>
